<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <header>    
    <%- include("../partials/headerShop") %>

    </header>

    <main class="shop">
        <section class="shop__filter">
            <label class="filter-title">BUSCAR</label>
            <input type="text" id="buscar" class="filter-input" placeholder="item o categoría">
            <label class="filter-title">ORDENAR POR</label>
            <select name="orden" id="orden"  class="filter-input">
                <option value="mayoramenor">Mayor a menor</option>
                <option value="menoramayor">Menor a mayor</option>
                <option value="alfabeticamente">A a Z</option>
            </select>
            <div class="filter-price">
                <p class="filter-title">PRECIO</p>
                <label class="price-title" for="valorminimo">MIN</label>
                <input name="valorminimo" id="valorminimo" class="price-input" placeholder="0">
                <label class="price-title"  for="valormaximo"> - MAX</label>
                <input name="valormaximo" id="valormaximo" class="price-input" placeholder="0">
            </div>            
            <label class="filter-title">FILTRAR</label>  

            <label class="filter-label">NUEVOS
                <input type="checkbox">
                <span class="filter-checkbox"></span>
            </label>
            <label class="filter-label">OFERTAS
                <input type="checkbox">
                <span class="filter-checkbox"></span>
            </label>
            <label class="filter-label">EDICIÓN ESPECIAL
                <input type="checkbox">
                <span class="filter-checkbox"></span>
            </label>
            <label class="filter-label">FAVORITOS
                <input type="checkbox">
                <span class="filter-checkbox"></span>
            </label>          
                        
        </section>

        <section class="shop__content">
            <ul class="shop__items">

                <% datos.forEach(item=> { %>

                
                <li class="shop__item">
                    <article class="card-item">
                        <a class="card-item__link" href="">
                            <picture class="card-item__cover">
                                <span class="card-item__tag">NUEVO</span>
                                <img class="card-item__img--front" src= "<%= item.img_front %>" alt="">
                                <img class="card-item__img--back" src="<%= item.img_back %>" alt="">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__licence"><%= item.licence_name %></p>
                                <h4 class="card-item__name"><%= item.product_name %></h4>
                                <p class="card-item__price">$ <%= item.product_price %></p>
                                <p class="card-item__promo"><%= item.product_dues %> cuotas sin interes</p>
                            </div>
                        </a>   
                    </article>
                </li>
                <% }) %>

            </ul>
            <div class="center">
                <div class="pagination">
                    <a href="/shop">❮</a>
                    <a href="/shop">1</a>
                    <a href="/shop" class="active">2</a>
                    <a href="#">...</a>
                    <a href="#">9</a>
                    <a href="#">10</a>
                    <a href="#">❯</a>
                </div>
              </div>
        </section>     
    </main>
    <footer class="footer">
    <%- include("../partials/footerShop") %>
    
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>

</body>
</html>